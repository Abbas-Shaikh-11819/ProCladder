<!-- views/pages/home.ejs -->
<!-- Hero Banner -->
<section class="hero-banner">
    <div class="hero-overlay"></div>
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h1 class="hero-title display-4 fw-bold text-white mb-4">
                    Professional Cladding Solutions
                </h1>
                <p class="hero-subtitle lead text-white mb-5">
                    Transform your buildings with cutting-edge 3D cladding technology. 
                    Expert civil engineering services for commercial and residential projects.
                </p>
                <div class="hero-buttons">
                    <a href="/products" class="btn btn-primary btn-lg me-3">
                        View Our Services <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                    <a href="/contact" class="btn btn-outline-light btn-lg">
                        Get Free Quote <i class="fas fa-calculator ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="scroll-indicator">
        <a href="#services" class="text-white">
            <i class="fas fa-chevron-down"></i>
        </a>
    </div>
</section>

<!-- Products Slider Section -->
<section id="services" class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center mb-5">
                <h2 class="section-title">Our Expert Services</h2>
                <p class="section-subtitle text-muted">
                    Comprehensive 3D cladding solutions tailored to your project requirements
                </p>
            </div>
        </div>
        
        <% if (featuredProducts && featuredProducts.length > 0) { %>
            <%- include('../partials/slider', { products: featuredProducts }) %>
        <% } %>
    </div>
</section>

<!-- Customer Testimonials -->
<section class="testimonials-section py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center mb-5">
                <h2 class="section-title">What Our Clients Say</h2>
                <p class="section-subtitle text-muted">
                    Trusted by leading construction companies and architects
                </p>
            </div>
        </div>
        
        <div class="row">
            <% if (testimonials && testimonials.length > 0) { %>
                <% testimonials.slice(0, 3).forEach(testimonial => { %>
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="testimonial-card card h-100">
                            <div class="card-body">
                                <div class="testimonial-rating mb-3">
                                    <% for(let i = 0; i < testimonial.rating; i++) { %>
                                        <i class="fas fa-star text-warning"></i>
                                    <% } %>
                                </div>
                                <p class="testimonial-text card-text">
                                    "<%= testimonial.testimonial %>"
                                </p>
                            </div>
                            <div class="card-footer bg-transparent">
                                <div class="testimonial-author d-flex align-items-center">
                                    <img src="<%= testimonial.image %>" alt="<%= testimonial.clientName %>" 
                                         class="testimonial-avatar me-3">
                                    <div>
                                        <h6 class="mb-0"><%= testimonial.clientName %></h6>
                                        <small class="text-muted">
                                            <%= testimonial.position %>, <%= testimonial.company %>
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </div>
</section>

<!-- Upcoming Products -->
<% if (upcomingProducts && upcomingProducts.length > 0) { %>
<section class="upcoming-products py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center mb-5">
                <h2 class="section-title">Coming Soon</h2>
                <p class="section-subtitle text-muted">
                    Exciting new services and innovations in development
                </p>
            </div>
        </div>
        
        <div class="row">
            <% upcomingProducts.forEach(product => { %>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="upcoming-card card h-100">
                        <img src="<%= product.image %>" alt="<%= product.title %>" class="card-img-top">
                        <div class="card-body">
                            <span class="badge bg-warning text-dark mb-2">Coming Soon</span>
                            <h5 class="card-title"><%= product.title %></h5>
                            <p class="card-text text-muted"><%= product.shortDescription %></p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <button class="btn btn-outline-primary btn-sm" onclick="notifyMe('<%= product.title %>')">
                                Notify Me <i class="fas fa-bell ms-1"></i>
                            </button>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>
<% } %>

<!-- Call to Action -->
<section class="page-header-gradient py-5 bg-primary text-white">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h3 class="cta-title mb-3">Ready to Start Your Project?</h3>
                <p class="cta-text mb-0">
                    Get a free consultation and detailed quote for your cladding project today.
                </p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <a href="/contact" class="btn btn-light btn-lg">
                    Contact Us Today <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    </div>
</section>