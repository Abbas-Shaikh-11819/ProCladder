<!-- views/pages/products.ejs -->
<div class="products-page">
    <!-- Page Header -->
    <section class="page-header page-header-gradient text-white py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h1 class="display-4 fw-bold mb-3 mt-4">Our Cladding Services</h1>
                    <p class="lead text-white">Comprehensive solutions for modern construction projects</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Filters and Search -->
    <section class="filters-section py-4 bg-light">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="filter-buttons">
                        <button class="btn btn-outline-primary filter-btn active" data-filter="all">
                            All Services
                        </button>
                        <% if (categories && categories.length > 0) { %>
                            <% categories.forEach(category => { %>
                                <button class="btn btn-outline-primary filter-btn" data-filter="<%= category %>">
                                    <%= category.replace('-', ' ').replace(/\b\w/g, l => l.toUpperCase()) %>
                                </button>
                            <% }) %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Products Grid -->
    <section class="products-grid py-5">
        <div class="container">
            <% if (products && products.length > 0) { %>
                <div class="row" id="productsContainer">
                    <% products.forEach(product => { %>
                        <div class="col-lg-4 col-md-6 mb-4 product-card" data-category="<%= product.category %>">
                            <div class="card h-100">
                                <div class="card-img-container position-relative">
                                    <img src="<%= product.image %>" alt="<%= product.title %>" class="card-img-top">
                                    <div class="card-overlay">
                                        <div class="overlay-content">
                                            <a href="/products/<%= product._id %>" class="btn btn-primary btn-sm">
                                                View Details <i class="fas fa-arrow-right ms-1"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="card-category mb-2">
                                        <span class="badge bg-primary">
                                            <%= product.category.replace('-', ' ').toUpperCase() %>
                                        </span>
                                    </div>
                                    <h5 class="card-title"><%= product.title %></h5>
                                    <p class="card-text text-muted"><%= product.shortDescription %></p>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <a href="/products/<%= product._id %>" class="btn btn-outline-primary btn-sm">
                                            Learn More
                                        </a>
                                        <div class="card-actions">
                                            <button class="btn btn-sm btn-outline-secondary" 
                                                    onclick="shareProduct('<%= product._id %>', '<%= product.title %>')"
                                                    title="Share">
                                                <i class="fas fa-share-alt"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
                
                <!-- Pagination would go here if needed -->
                <div class="row mt-5">
                    <div class="col-12 text-center">
                        <p class="text-muted">
                            Showing <%= products.length %> service<%= products.length !== 1 ? 's' : '' %>
                        </p>
                    </div>
                </div>
            <% } else { %>
                <div class="row">
                    <div class="col-12 text-center py-5">
                        <div class="no-products">
                            <i class="fas fa-search fa-4x text-muted mb-4"></i>
                            <h3 class="text-muted">No services found</h3>
                            <p class="text-muted">Try adjusting your search criteria or browse all services.</p>
                            <a href="/products" class="btn btn-primary">View All Services</a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </section>

    <!-- Call to Action -->
    <section class=" py-5 page-header-gradient text-white">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h3 class="cta-title mb-3">Need a Custom Solution?</h3>
                    <p class="cta-text mb-0">
                        Our team can design and implement bespoke 3D cladding systems tailored to your specific requirements.
                    </p>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <a href="/contact" class="btn btn-light btn-lg">
                        Contact Us Today <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </section>
</div>