<!-- views/pages/error.ejs -->
<div class="error-page">
  <section class="error-section py-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8 text-center">

          <div class="error-icon mb-4">
            <% if (statusCode === 404) { %>
              <i class="fas fa-search fa-5x text-warning"></i>
            <% } else { %>
              <i class="fas fa-exclamation-triangle fa-5x text-danger"></i>
            <% } %>
          </div>

          <h1 class="display-1 fw-bold text-primary mb-4"><%= statusCode || '404' %></h1>

          <h2 class="h3 mb-4"><%= title || 'Page Not Found' %></h2>

          <p class="lead text-muted mb-4">
            <%= message || 'The page you are looking for could not be found.' %>
          </p>

          <div class="error-actions">
            <a href="/" class="btn btn-primary btn-lg me-3">
              <i class="fas fa-home me-2"></i>Go Home
            </a>
            <a href="/contact" class="btn btn-outline-primary btn-lg">
              <i class="fas fa-envelope me-2"></i>Contact Support
            </a>
          </div>

          <div class="helpful-links mt-5 pt-4 border-top">
            <h6 class="fw-bold mb-3">Helpful Links</h6>
            <div class="row">
              <div class="col-md-3 col-6 mb-2"><a href="/" class="text-decoration-none">Home</a></div>
              <div class="col-md-3 col-6 mb-2"><a href="/about" class="text-decoration-none">About Us</a></div>
              <div class="col-md-3 col-6 mb-2"><a href="/products" class="text-decoration-none">Our Services</a></div>
              <div class="col-md-3 col-6 mb-2"><a href="/contact" class="text-decoration-none">Contact</a></div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </section>
</div>
