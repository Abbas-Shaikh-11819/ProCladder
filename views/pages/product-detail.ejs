<!-- views/pages/product-detail.ejs -->
<div class="product-detail-page">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="bg-light py-2">
        <div class="container">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/products">Services</a></li>
                <li class="breadcrumb-item active" aria-current="page"><%= product.title %></li>
            </ol>
        </div>
    </nav>

    <!-- Product Hero Section -->
    <section class="product-hero py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <div class="product-image-container">
                        <img src="<%= product.image %>" alt="<%= product.title %>" class="img-fluid rounded shadow-lg main-product-image">
                        
                        <!-- Image Gallery -->
                        <% if (product.gallery && product.gallery.length > 0) { %>
                        <div class="image-gallery mt-3">
                            <div class="row">
                                <% product.gallery.slice(0, 4).forEach((image, index) => { %>
                                <div class="col-3">
                                    <img src="<%= image %>" alt="<%= product.title %> - Image <%= index + 1 %>" 
                                         class="img-fluid rounded gallery-thumb" 
                                         onclick="changeMainImage('<%= image %>')">
                                </div>
                                <% }) %>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>
                
                <div class="col-lg-6">
                    <div class="product-info">
                        <!-- Category Badge -->
                        <div class="product-category mb-3">
                            <span class="badge bg-primary fs-6">
                                <%= product.category.replace('-', ' ').toUpperCase() %>
                            </span>
                        </div>
                        
                        <!-- Product Title -->
                        <h1 class="product-title display-5 fw-bold mb-3"><%= product.title %></h1>
                        
                        <!-- Short Description -->
                        <p class="product-short-desc lead text-muted mb-4">
                            <%= product.shortDescription %>
                        </p>
                        
                        <!-- Key Features -->
                        <% if (product.features && product.features.length > 0) { %>
                        <div class="product-features mb-4">
                            <h5 class="fw-bold mb-3">Key Features:</h5>
                            <ul class="feature-list">
                                <% product.features.slice(0, 5).forEach(feature => { %>
                                <li class="feature-item">
                                    <i class="fas fa-check text-success me-2"></i>
                                    <%= feature %>
                                </li>
                                <% }) %>
                            </ul>
                        </div>
                        <% } %>
                        
                        <!-- Action Buttons -->
                        <div class="product-actions">
                            <a href="/contact?service=<%= product._id %>" class="btn btn-primary btn-lg me-3">
                                Get Quote <i class="fas fa-calculator ms-2"></i>
                            </a>
                            <button class="btn btn-outline-primary btn-lg" onclick="shareProduct('<%= product._id %>', '<%= product.title %>')">
                                Share <i class="fas fa-share-alt ms-2"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Product Details Section -->
    <section class="product-details py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <!-- Description Tab Content -->
                    <div class="product-description-section">
                        <h2 class="section-title mb-4">Detailed Description</h2>
                        <div class="description-content">
                            <%= product.description %>
                        </div>
                    </div>
                    
                    <!-- Specifications -->
                    <% if (product.specifications && product.specifications.length > 0) { %>
                    <div class="product-specifications mt-5">
                        <h2 class="section-title mb-4">Technical Specifications</h2>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Specification</th>
                                        <th>Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% product.specifications.forEach(spec => { %>
                                    <tr>
                                        <td class="fw-semibold"><%= spec.name %></td>
                                        <td><%= spec.value %></td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <% } %>
                </div>
                
                <!-- Sidebar -->
                <div class="col-lg-4">
                    <div class="product-sidebar">
                        
                        <!-- Project Info -->
                        <div class="project-info-card card mt-4">
                            <div class="card-header">
                                <h6 class="mb-0">Project Information</h6>
                            </div>
                            <div class="card-body">
                                <div class="info-item mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-clock text-primary me-3"></i>
                                        <div>
                                            <strong>Timeline</strong>
                                            <p class="mb-0 text-muted small">Typically 2-8 weeks</p>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="info-item mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-shield-alt text-success me-3"></i>
                                        <div>
                                            <strong>Warranty</strong>
                                            <p class="mb-0 text-muted small">10-year structural warranty</p>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="info-item mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-certificate text-warning me-3"></i>
                                        <div>
                                            <strong>Certification</strong>
                                            <p class="mb-0 text-muted small">ISO 9001:2015 Certified</p>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="info-item">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-headset text-info me-3"></i>
                                        <div>
                                            <strong>Support</strong>
                                            <p class="mb-0 text-muted small">24/7 technical support</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Related Products -->
    <% if (relatedProducts && relatedProducts.length > 0) { %>
    <section class="related-products py-5">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h2 class="section-title text-center mb-5">Related Services</h2>
                </div>
            </div>
            
            <div class="row">
                <% relatedProducts.forEach(relatedProduct => { %>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <img src="<%= relatedProduct.image %>" alt="<%= relatedProduct.title %>" class="card-img-top">
                        <div class="card-body">
                            <div class="card-category mb-2">
                                <span class="badge bg-secondary">
                                    <%= relatedProduct.category.replace('-', ' ').toUpperCase() %>
                                </span>
                            </div>
                            <h5 class="card-title"><%= relatedProduct.title %></h5>
                            <p class="card-text text-muted"><%= relatedProduct.shortDescription %></p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="/products/<%= relatedProduct._id %>" class="btn btn-outline-primary w-100">
                                Learn More <i class="fas fa-arrow-right ms-2"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </section>
    <% } %>

    <!-- Call to Action -->
    <section class="page-header-gradient py-5 bg-primary text-white">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h3 class="cta-title mb-3">Ready to Get Started?</h3>
                    <p class="cta-text mb-0">
                        Contact our experts today for a free consultation and detailed project quote.
                    </p>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <a href="/contact?service=<%= product._id %>" class="btn btn-light btn-lg">
                        Get Free Quote <i class="fas fa-calculator ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </section>
</div>

<script>
// Change main product image
function changeMainImage(imageSrc) {
    const mainImage = document.querySelector('.main-product-image');
    mainImage.src = imageSrc;
    
    // Update gallery thumbnails active state
    document.querySelectorAll('.gallery-thumb').forEach(thumb => {
        thumb.classList.toggle('active', thumb.src === imageSrc);
    });
}

</script>

